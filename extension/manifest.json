{
    "manifest_version": 3,
    "name": "Age of Olympia Tracker",
    "version": "1.0",
    "description": "Suivez l'Ã©volution de vos stats sur Age of Olympia.",
    "permissions": ["storage", "scripting", "alarms"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "host_permissions": [
      "https://age-of-olympia.net/*"
    ],
    "content_scripts": [
    {
        "matches": ["https://age-of-olympia.net/*"],
        "js": ["content.js"]
    }
    ]
  }
  